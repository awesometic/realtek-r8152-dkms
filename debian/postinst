set -e

NAME=realtek-r8152
PACKAGE_NAME=$NAME-dkms
DEB_NAME=$(echo $PACKAGE_NAME | sed 's,_,-,')
CVERSION=`dpkg-query -W -f='${Version}' $DEB_NAME | awk -F "-" '{print $1}' | cut -d\: -f2`
ARCH=`dpkg --print-architecture`

msg() {
	echo "realtek-r8152-dkms: $@"
}

dkms_configure () {
	for POSTINST in /usr/lib/dkms/common.postinst "/usr/share/$PACKAGE_NAME/postinst"; do
		if [ -f "$POSTINST" ]; then
			"$POSTINST" "$NAME" "$CVERSION" "/usr/share/$PACKAGE_NAME" "$ARCH" "$2"
			return $?
		fi
		msg "WARNING: $POSTINST does not exist." >&2
	done
	msg "ERROR: DKMS version is too old and $PACKAGE_NAME was not" >&2
	msg "built with legacy DKMS support." >&2
	msg "You must either rebuild $PACKAGE_NAME with legacy postinst" >&2
	msg "support or upgrade DKMS to a more current version." >&2
	return 1
}

udev_configure() {
	msg "Installing udev rules to prevent from loading built-in old driver..."
	cp -f /tmp/realtek-r8152-dkms/rules.d/50-usb-realtek-net.rules /etc/udev/rules.d/

	msg "Reload udev..."
	[ -x "$(command -v udevadm)" ] \
		&& udevadm trigger \
		|| msg "udevadm not found. Please reboot to take effect."

	msg "Remove temporary files..."
	rm -rf /tmp/realtek-r8152-driver
}

case "$1" in
	configure)
		dkms_configure
		udev_configure
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		msg "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
